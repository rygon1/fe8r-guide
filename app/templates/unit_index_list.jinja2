{% if view == "list" %}
<div class="skill-grid">
    {% for group_data in grouped_units %}
    <div>
        <h3>{% if group_data.key %}{{ group_data.key }}{% else %}N/A{% endif %}</h3>

        {% for unit in group_data['units']%}
        <p><img src="/static/images/portraits/{{ unit.portrait_nid|urlencode }}.png" height="45"
                width="54" />&nbsp;&nbsp;&nbsp;<a href="/units/{{ unit.nid }}">{{ unit.name }}</a>
        </p>
        {% endfor %}

    </div>
    {% endfor %}
</div>
{% elif view == "detailed" %}
<div>
    {% for group_data in grouped_units %}
    <section>
        <h3>{% if group_data.key %}{{ group_data.key }}{% else %}N/A{% endif %}</h3>
        <hr />
        {% for unit in group_data['units']%}
        <div class="list-unit-container">
            <img src="/static/images/portraits/{{ unit.portrait_nid|urlencode }}.png" height="60" width="72" />
            <div class="list-unit-desc">
                <p></p>
                <p>
                    <a href="/units/{{ unit.nid }}">{{ unit.name }}</a>
                </p>
                <p class="muted-text entry-description"><small><i>{{ unit.desc }}</i></small></p>
            </div>
        </div>
        {% endfor %}

    </section>
    {% endfor %}
</div>
{% endif %}