{% if not request.headers.hx_request %}
{% extends "layout.html.jinja2" %}
{% endif %}
{% block title %}Achievements &mdash; Codex | {% endblock %}
{% block content %}
<h1>Achievements</h1>
<div class="container-fluid-sidebar">
    <aside id="sidebar" class="sidebar">
        <nav>
            <ul>
                {% for achievement_nid,achievement_data in achievements|items %}
                <li>
                    <a href="#{{ achievement_nid }}"><small>{{ achievement_data.name }}</small></a>
                </li>
                {% endfor %}
            </ul>
        </nav>
    </aside>
    <section>
        <p class="sidebar-toggle">
            <button class="secondary" _="on click toggle .sidebar-open on #sidebar">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                    aria-hidden="true" data-slot="icon" fill="none" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M9 4.5v15m-4.875 0h15.75c.621 0 1.125-.504 1.125-1.125V5.625c0-.621-.504-1.125-1.125-1.125H4.125C3.504 4.5 3 5.004 3 5.625v12.75c0 .621.504 1.125 1.125 1.125Z">
                    </path>
                </svg>
            </button>
        </p>
        {% for achievement_nid,achievement_data in achievements|items %}
        <article>
            <header>
                <strong id="{{ achievement_nid }}">{{ achievement_data.title }}</strong>
            </header>
            <p>{{ achievement_data.text }}</p>
        </article>
        {% endfor %}
    </section>
</div>
{% endblock content %}