                    <td>{{ class_data.bases.mov }}</td>
                    <td>+{{ class_data.growth_bonus.mov}}%</td>
                    <td>{{ class_data.max_stats.mov + unit_data.stat_cap_modifiers.mov }}</td>
                </tr>
            </tbody>
        </table>
    </details>

