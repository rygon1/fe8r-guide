{% if not request.headers.hx_request %}
{% extends "layout.html.jinja2" %}
{% endif %}
{% block title %}{{ class_data.name }} &mdash; Classes | {% endblock %}
{% block content %}
<article>
    <header>
        <hgroup>
            <h3>{{ class_data.name }}</h3>
            <p>{{ class_data.desc }}</p>
        </hgroup>
    </header>
    <div class="grid">
        <div>
            <h4>Stats</h4>
            <table class="striped">
                <thead>
                    <tr>
                        <th scope="col">Stat</th>
                        <th scope="col">
                            On Promo
                        </th>
                        <th scope="col">
                            Growth
                        </th>
                        <th scope="col">
                            Cap
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">HP</th>
                        <td>+{{ class_data.promotion.hp }}</td>
                        <td>+{{ class_data.growth_bonus.hp}}%</td>
                        <td>{{ class_data.max_stats.hp }}</td>
                    </tr>
                    <tr>
                        <th scope="row">STR</th>
                        <td>+{{ class_data.promotion.str }}</td>
                        <td>+{{ class_data.growth_bonus.str}}%</td>
                        <td>{{ class_data.max_stats.str }}</td>
                    </tr>
                    <tr>
                        <th scope="row">MAG</th>
                        <td>+{{ class_data.promotion.mag }}</td>
                        <td>+{{ class_data.growth_bonus.mag}}%</td>
                        <td>{{ class_data.max_stats.mag }}</td>
                    </tr>
                    <tr>
                        <th scope="row">SKL</th>
                        <td>+{{ class_data.promotion.skl }}</td>
                        <td>+{{ class_data.growth_bonus.skl}}%</td>
                        <td>{{ class_data.max_stats.skl }}</td>
                    </tr>
                    <tr>
                        <th scope="row">SPD</th>
                        <td>+{{ class_data.promotion.spd }}</td>
                        <td>+{{ class_data.growth_bonus.spd}}%</td>
                        <td>{{ class_data.max_stats.spd }}</td>
                    </tr>
                    <tr>
                        <th scope="row">LCK</th>
                        <td>+{{ class_data.promotion.lck }}</td>
                        <td>+{{ class_data.growth_bonus.lck}}%</td>
                        <td>{{ class_data.max_stats.lck }}</td>
                    </tr>
                    <tr>
                        <th scope="row">DEF</th>
                        <td>+{{ class_data.promotion.df }}</td>
                        <td>+{{ class_data.growth_bonus.df}}%</td>
                        <td>{{ class_data.max_stats.df }}</td>
                    </tr>
                    <tr>
                        <th scope="row">RES</th>
                        <td>+{{ class_data.promotion.res }}</td>
                        <td>+{{ class_data.growth_bonus.res}}%</td>
                        <td>{{ class_data.max_stats.res }}</td>
                    </tr>
                    <tr>
                        <th scope="row">CON</th>
                        <td>+{{ class_data.promotion.con }}</td>
                        <td>+{{ class_data.growth_bonus.con}}%</td>
                        <td>{{ class_data.max_stats.con }}</td>
                    </tr>
                    <tr>
                        <th scope="row">MOV</th>
                        <td>{{ class_data.bases.mov }}</td>
                        <td>+{{ class_data.growth_bonus.mov}}%</td>
                        <td>{{ class_data.max_stats.mov }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        {% if class_data.turns_into %}
        <div>
            <h4>Promotions</h4>
            <ul>
                {% for next_class_data in class_data.turns_into %}
                <li><a href="/classes/{{next_class_data.nid}}">{{next_class_data.name}}</a></li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
</article>
{% endblock content %}