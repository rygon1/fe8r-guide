<div>
    <hgroup>
        <h4>{{ class_data.name }}</h4>
        <p>{{ class_data.desc }}</p>
    </hgroup>
    <details class="dropdown">
        <summary>Stats</summary>
        <table class="striped">
            <thead>
                <tr>
                    <th scope="col">Stat</th>
                    <th scope="col">
